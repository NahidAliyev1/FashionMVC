@using FashionMVCProject.MVC.Models
@using FashionMVCProject.MVC.ViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers

@model FeaturedProductsVM

<div class="col-sm-12 col-xl-6">
    <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">Create Form</h6>
        <form asp-controller="FeaturedProducts" asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <!-- Şəkil faylını əlavə edirik -->
                <label for="ImageFile" class="form-label">Image</label>
                <input asp-for="ImageFile" type="file" class="form-control" id="ImageFile">
                <span asp-validation-for="ImageFile" class="text-danger"></span>

                <!-- Məhsul adı, qiymət və qısa təsvir -->
                <label for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control" id="Name">
                <span asp-validation-for="Name" class="text-danger"></span>

                <label for="Price" class="form-label">Price</label>
                <input asp-for="Price" class="form-control" id="Price">
                <span asp-validation-for="Price" class="text-danger"></span>

                <label for="ShortDescription" class="form-label">Description</label>
                <input asp-for="ShortDescription" class="form-control" id="ShortDescription">
                <span asp-validation-for="ShortDescription" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>