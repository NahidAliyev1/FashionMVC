@using FashionMVCProject.MVC.Models

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model FeaturedProducts

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-6 col-xl-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Featured Products Table</h6>
                <a asp-area="Admin" asp-controller="FeaturedProducts" asp-action="Create">Create</a>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col"># </th>
                            <th scope="col">Image</th>
                            <th scope="col">Name</th>
                            <th scope="col">Price</th>
                            <th scope="col">ShortDescription</th>
                        </tr>
                    </thead>
                    <tbody>
                       
                            <tr>
                                <th scope="row">@Model.Id</th>
                                <td><img src="@Model.ImgPath" alt="Alternate Text" /></td>
                                <td>@Model.Name</td>
                                <td>@Model.Price</td>
                                <td>@Model.ShortDescription</td>
                            </tr>
                            <a asp-area="Admin" asp-controller="FeaturedProducts" asp-action="Info" asp-route-id="@Model.Id" class="btn btn-info m-2">Info</a>
                            <a asp-area="Admin" asp-controller="FeaturedProducts" asp-action="Create" asp-route-id="@Model.Id" class="btn btn-warning m-2">Update</a>
                            <a asp-area="Admin" asp-controller="FeaturedProducts" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger m-2">Delete</a>

                        

                    </tbody>
                </table>
            </div>
        </div>
