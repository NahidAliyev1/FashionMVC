@using FashionMVCProject.MVC.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model FeaturedProducts

<div class="col-sm-12 col-xl-6">
    <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">Create Form</h6>
        <form asp-area="Admin" asp-controller="FeaturedProducts" asp-action="Create" method="post">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Image</label>
                <input asp-for="ImgPath" class="form-control" id="exampleInputEmail1"
                       aria-describedby="emailHelp">
                <label for="exampleInputEmail1" class="form-label">Name</label>
                <input asp-for="Name" class="form-control" id="exampleInputEmail1"
                       aria-describedby="emailHelp">
                <label for="exampleInputEmail1" class="form-label">Price</label>
                <input asp-for="Price" class="form-control" id="exampleInputEmail1"
                       aria-describedby="emailHelp">
                <label for="exampleInputEmail1" class="form-label">Description</label>
                <input asp-for="ShortDescription" class="form-control" id="exampleInputEmail1"
                       aria-describedby="emailHelp">




            </div>

            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>